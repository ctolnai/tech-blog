
{{#each posts as | post|}}
<div class="card" style="width: 50rem;">
  <div class="card-body">
    <h1 class="card-title">{{post.title}}</h1>
    <h5 class="card-user">Posted by {{post.user.username}}</h5>
    <h5 class="card-dateStamp"> Posted on: {{post.createdAt}}</h5>
    <p class="card-text">{{post.post}}</p>
    <p class="card-comment">{{post.comment.body}}</p>
  </div>
</div>
{{/each}}

<form>
  <div class="mb-3">
    <label class="form-label">Add A Post</label>
    <p></p>
    <input class="newTitle" id="newTitle" placeholder="Title">
    <p></p>
    <input class="newPost" id="newPost" placeholder="Post">
  </div>
  <button type="submit" class="btn btn-primary postButton">Post</button>
</form>

<script src= "./js/post.js"></script>